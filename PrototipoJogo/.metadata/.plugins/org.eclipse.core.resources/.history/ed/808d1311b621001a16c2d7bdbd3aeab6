package view;

import javax.swing.JOptionPane;

public class Avisos {

	public static void avisoTelaPersonagem() {
		JOptionPane.showMessageDialog(null, "Nenhum avatar selecionado! Para jogar, escolha seu avatar.");
	}
	
	public static void mensagemRespostaCerta() {
		JOptionPane.showMessageDialog(null, "Resposta correta!!!");
	}
	
	public static void mensagemRespostaErrada() {
		JOptionPane.showMessageDialog(null, "Resposta incorreta!!!");
	}
	
	public static void mensagemNadaSelecionado() {
		JOptionPane.showMessageDialog(null, "Selecione uma resposta!!!");
	}
	
	public static void messagemPersonagemNselecionado() {
		JOptionPane.showMessageDialog(null, "Preencha todos os campos!");
	}
	
	public static void messagemNomeVazio() {
		JOptionPane.showMessageDialog(null, "Preencha todos os campos!");
	}
}
